@code {

    /// <summary>
    /// Точка останова по ширине окна (Xxl, Lg, Md, Sm, Xs)
    /// </summary>
    [Parameter]
    public Breakpoint SizeBreakPointOption { get; set; }
    
    //TODO:Добавить информацию о курсах (DTO + параметр)

    /// <summary>
    /// Ширина картинки в px
    /// </summary>
    public int SizeOption { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        await base.OnParametersSetAsync();
        InitImgWeight(SizeBreakPointOption);
    }

    /// <summary>
    /// Размер изображения в зависимости от ширины окна
    /// </summary>
    /// <param name="sizeBreakPoint">значение в px</param>
    private void InitImgWeight(Breakpoint sizeBreakPoint)
    {
        SizeOption = sizeBreakPoint switch
        {
            Breakpoint.Xxl => 250,
            Breakpoint.Lg => 200,
            Breakpoint.Md => 200,
            Breakpoint.Sm => 150,
            Breakpoint.Xs => 100,
            _ => SizeOption
        };
    }
}